<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/lbj" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="My Basketball ScoreBoard App"
        android:textColor="#ff00ff"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="70dp"
            android:text="Team A"
            android:textColor="#edae58"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/score_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:text="00"
            android:textColor="#edae58"
            android:textSize="90sp" />

        <Button
            android:id="@+id/increment_three_a"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="25dp"
            android:onClick="threePointsA"
            android:text="+3" />

        <Button
            android:id="@+id/increment_two_a"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:onClick="twoPointsA"
            android:text="+2" />

        <Button
            android:id="@+id/increment_one_a"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:onClick="onePointA"
            android:text="+1" />

        <Button
            android:id="@+id/increment_one_a"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:onClick="minOnePointA"
            android:text="-1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginRight="55dp"
            android:text="Team B"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/score_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="55dp"
            android:text="00"
            android:textColor="@color/colorPrimary"
            android:textSize="90sp" />

        <Button
            android:id="@+id/increment_three"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="55dp"
            android:onClick="threePointsB"
            android:text="+3" />

        <Button
            android:id="@+id/increment_two"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="55dp"
            android:onClick="twoPointsB"
            android:text="+2" />

        <Button
            android:id="@+id/increment_one"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="55dp"
            android:onClick="onePointB"
            android:text="+1" />

        <Button
            android:id="@+id/increment_one"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="55dp"
            android:onClick="minOnePointB"
            android:text="-1" />


    </LinearLayout>

    <Button
        android:layout_width="68dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"
        android:onClick="resetButton"
        android:text="RESET" />

</RelativeLayout>